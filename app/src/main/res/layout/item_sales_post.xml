<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 텍스트들 수직 정렬 -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 제목, 작성자, 식당명, 시간, 좋아요 아이콘들 넣기 -->
        <TextView
            android:id="@+id/text_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세일글 제목"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_item_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 아이디"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/text_item_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛집 이름"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-07-24 13:30"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:id="@+id/like_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                android:contentDescription="좋아요"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/text_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


