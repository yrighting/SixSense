<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editPartyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="모임명" />

        <EditText
            android:id="@+id/editPartyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="일시 (예: 2025-08-01 18:00)" />

        <EditText
            android:id="@+id/editPartyLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="장소" />

        <EditText
            android:id="@+id/editPartyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="모임 설명" />

        <EditText
            android:id="@+id/editChatUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="연결용 링크 (예: 단톡방 URL)" />

        <Button
            android:id="@+id/btnSubmitParty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록하기"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>