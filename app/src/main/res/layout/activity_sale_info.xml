<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bgcolor"
    tools:context=".SaleInfo">

    <!-- 전체 화면을 스크롤 가능하게 감싸는 ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 게시글 제목 -->
        <TextView
            android:id="@+id/txtPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 제목"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- 맛집 이름 -->
        <TextView
            android:id="@+id/txtRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛집 이름"
            android:textSize="18sp"
            android:textColor="#666666"
            android:paddingBottom="2dp" />

        <!-- 작성자 아이디 + 작성 시간 -->
        <TextView
            android:id="@+id/txtWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 아이디"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-07-24 13:30"
            android:textSize="14sp"
            android:textColor="#888888"
            android:paddingBottom="12dp" />

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- 본문 내용 -->
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세일 글 본문 전체 내용"
            android:textSize="16sp"
            android:paddingBottom="12dp" />

        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:padding="8dp" />


        <!-- 좋아요 영역 (하트 아이콘 + 숫자) -->
        <LinearLayout
            android:id="@+id/like_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_gravity="start">

            <!-- 좋아요 아이콘 -->
            <ImageView
                android:id="@+id/image_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                android:contentDescription="좋아요"
                android:clickable="true"
                android:focusable="true" />

            <!-- 좋아요 수 텍스트 -->
            <TextView
                android:id="@+id/text_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

