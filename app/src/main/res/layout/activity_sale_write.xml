<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 식당 이름 입력 -->
        <EditText
            android:id="@+id/edit_restaurant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="식당 이름"
            android:inputType="text"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 제목 입력 -->
        <EditText
            android:id="@+id/edit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/edit_restaurant_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- 작성자 아이디 입력 -->
        <EditText
            android:id="@+id/edit_alias_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="작성자 아이디"
            android:inputType="text"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_title"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- 내용 입력 -->
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:hint="내용"
            android:gravity="top"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/edit_alias_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- 이미지 선택 버튼 -->
        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 선택"
            app:layout_constraintTop_toBottomOf="@id/edit_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- 선택한 이미지 미리보기 -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_select_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/btn_submit_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="등록"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/image_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

