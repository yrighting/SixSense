<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/formLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="이름" />

            <EditText
                android:id="@+id/editTextBirth"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="생년월일 (YYYY-MM-DD)"
                android:inputType="date" />

            <!-- 아이디 + 중복확인 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="2"
                    android:hint="아이디" />

                <Button
                    android:id="@+id/btnCheckUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="중복확인" />
            </LinearLayout>

            <!-- 비밀번호 + 눈 아이콘 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:paddingEnd="48dp" />

                <ImageButton
                    android:id="@+id/btnTogglePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_eye_closed" />
            </RelativeLayout>

            <!-- 비밀번호 확인 + 눈 아이콘 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextPasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:paddingEnd="48dp" />

                <ImageButton
                    android:id="@+id/btnTogglePasswordConfirm"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="1dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="비밀번호 보기 전환 버튼"
                    android:src="@drawable/baseline_remove_red_eye_24" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editTextSchool"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="학교" />

            <EditText
                android:id="@+id/editTextMajor"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="전공" />

            <EditText
                android:id="@+id/editTextStudentId"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="학번"
                android:inputType="number" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="완료" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>